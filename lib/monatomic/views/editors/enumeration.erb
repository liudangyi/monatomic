<div class="form-group">
  <label for="<%= field.name %>" class="col-sm-2 control-label"><%= t field %></label>
  <div class="col-sm-10">
    <select id="<%= field.name %>" name="<%= param_name %>" placeholder="<%= t field %>">
      <option value=""></option>
      <% field.options[:in].each do |v| %>
      <option value="<%= h v %>" <%= 'selected="selected"' if v == value %>><%= h v %></option>
      <% end %>
      <% if value.present? and not value.in? field.options[:in] %>
      <option value="<%= h value %>" selected="selected"><%= h value %></option>
      <% end %>
    </select>
    <script>
    $("select#<%= field.name %>").selectize({
      create: false
    });
    </script>
  </div>
</div>
