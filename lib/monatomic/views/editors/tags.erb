<div class="form-group">
  <label for="<%= field.name %>" class="col-sm-2 control-label"><%= t field %></label>
  <div class="col-sm-10">
    <select id="<%= field.name %>" name="<%= param_name %>[]" multiple="multiple">
      <% field.options[:klass].distinct(:roles).each do |v| %>
      <option value="<%= h v %>" <%= 'selected="selected"' if v.in? value %>><%= h v %></option>
      <% end %>
    </select>
    <script>
    $("select#<%= field.name %>").selectize({
      create: function(input) {
        return {
          value: input,
          text: input
        }
      }
    });
    </script>
  </div>
</div>
