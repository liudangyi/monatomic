<div class="form-group">
  <label for="<%= field.name %>" class="col-sm-2 control-label"><%= t field %></label>
  <div class="col-sm-10">
    <!-- See controller L89 -->
    <input type="hidden" name="<%= param_name %>[]">
    <select id="<%= field.name %>" name="<%= param_name %>[]" multiple="multiple" placeholder="<%= t field %>">
      <option value="">Place</option>
      <% field.options[:klass].distinct(field.name).each do |v| %>
      <option value="<%= h v %>" <%= 'selected="selected"' if v.in? value %>><%= h v %></option>
      <% end %>
    </select>
    <script>
    $("select#<%= field.name %>").selectize({
      create: true
    });
    </script>
  </div>
</div>
