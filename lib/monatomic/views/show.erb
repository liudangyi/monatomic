<ol class="breadcrumb">
  <li><a href="<%= model_path %>"><%= @model.display_name %></a></li>
  <li class="active"><%= @resource.display_name %></li>
</ol>
<% if session[:flash] %>
  <div class="alert alert-success"><%= h session[:flash] %></div>
  <% session.delete(:flash) %>
<% end %>
<table class="table">
<% @fields.each do |field| %>
  <tr>
    <th class="col-sm-2" style="text-align: right; padding-right: 20px;"><%= field.options[:display_name] %></th>
    <td><%= present @resource, field %></td>
  </tr>
<% end %>
<tr>
  <th></th>
  <td>
    <% if @resource.writable? current_user %>
    <a class="btn btn-warning" href="<%= model_path @resource.id, "edit" %>"><%= t "Edit" %></a>
    <% end %>
    <% if @resource.deletable? current_user %>
    <a class="btn btn-danger" href="<%= model_path @resource.id, "delete" %>" data-method="post"><%= t "Delete" %></a>
    <% end %>
  </td>
</tr>
</table>
