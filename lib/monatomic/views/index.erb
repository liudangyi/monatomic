<ol class="breadcrumb">
  <li class="active"><%= @model.display_name %></li>
  <% if @resources.new.writable? current_user %>
  <a class="pull-right" href="<%= model_path "new" %>">+ <%= t "New" %></a>
  <% end %>
</ol>
<% if session[:flash] %>
  <div class="alert alert-success"><%= h session[:flash] %></div>
  <% session.delete(:flash) %>
<% end %>
<table class="table">
<thead>
  <tr>
    <% @fields.each do |field| %>
    <th><%= field.options[:display_name] %></th>
    <% end %>
    <th style="width: 150px;"><%= t "Actions" %></th>
  </tr>
</thead>
<tbody>
  <% @resources.each do |resource| %>
  <tr>
    <% @fields.each do |field| %>
      <td><%= present(resource, field) %></td>
    <% end %>
    <td>
      <a class="label label-primary" href="<%= model_path resource.id %>"><%= t "Show" %></a>
      <% if resource.writable? current_user %>
      <a class="label label-warning" href="<%= model_path resource.id, "edit" %>"><%= t "Edit" %></a>
      <% end %>
      <% if resource.deletable? current_user %>
      <a class="label label-danger" href="<%= model_path resource.id, "delete" %>" data-method="post"><%= t "Delete" %></a>
      <% end %>
    </td>
  </tr>
  <% end %>
</tbody>
</table>
