<form class="form-horizontal" action="<%= model_path @resource.id %>" method="post">
<% @fields.each do |field| %>
  <% next if not @resource.writable? current_user, field %>
  <div class="form-group">
    <label for="<%= field.name %>" class="col-sm-2 control-label"><%= field.options[:display_name] %></label>
    <div class="col-sm-10">
      <input type="email" name="<%= field.name %>" class="form-control" id="<%= field.name %>" placeholder="<%= field.options[:display_name] %>" value="<%= h @resource[field.name] %>">
    </div>
  </div>
<% end %>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default"><%= t "Submit" %></button>
    </div>
  </div>
</form>
